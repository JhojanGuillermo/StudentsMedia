<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/picture_image"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_profile"/>

        <TextView
            android:id="@+id/fullname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_image"
            android:paddingLeft="16sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1c79f2"
            android:layout_marginBottom="4dp"
            android:text="Nombres del Evento"/>

        <TextView
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16sp"
            android:layout_below="@+id/fullname_text"
            android:layout_marginBottom="2dp"
            android:drawableLeft="@drawable/ic_clock" />

        <TextView
            android:id="@+id/fecha_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fecha"
            android:layout_below="@+id/fullname_text"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="1dp"
            android:text=" Fecha"/>

        <TextView
            android:id="@+id/lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16sp"
            android:layout_below="@+id/fecha"
            android:drawableLeft="@drawable/ic_location"
            />

        <TextView
            android:id="@+id/lugar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lugar"
            android:layout_below="@+id/fecha_text"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="Lugar"
            android:layout_marginBottom="6dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>